<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Componentes_ProyectoGimnasioMMA.Views.Login"
             Title="Login">

        <Grid RowDefinitions="Auto, Auto,*"
          ColumnDefinitions="*"
          VerticalOptions="Center"
          HorizontalOptions="Center">


            <Image 
                HeightRequest="200"
                Grid.Column="0"
                Grid.Row="0"
                x:Name="imagenPortada"/>
            
            <!-- TÃ­tulo del login -->
            <Label Text=""
               HorizontalOptions="CenterAndExpand"
               FontSize="30"
               FontAttributes="Bold"
               x:Name="Titulo"
               Grid.Row="1"
               Grid.Column="0"/>

            <!-- Contenedor para controles de login -->
            <VerticalStackLayout x:Name="mainVSL"
                             Grid.Row="2"
                             Grid.Column="0"
                             VerticalOptions="Center"
                             HorizontalOptions="Center">
            </VerticalStackLayout>

        </Grid>

</ContentPage>
